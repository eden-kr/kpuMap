<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RestaurantActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="맛집 리스트"
        app:titleTextColor="#FFFFFF"
        android:id="@+id/resToolBar"
        android:background="#54D7E8">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <EditText
            android:id="@+id/resEdit"
            android:layout_width="380dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textColor="#858485"
            android:background="@drawable/serachrec"
            android:hint=" 검색어를 입력해주세요." />

        <ImageButton
            android:id="@+id/resBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/resEdit"
            android:layout_alignRight="@id/resEdit"
            android:layout_marginTop="23dp"
            android:layout_marginRight="20dp"
            android:background="#FFFFFF"
            android:src="@drawable/ic_search_black_24dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3" >
    </ListView>

</LinearLayout>