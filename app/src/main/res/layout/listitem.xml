<?xml version="1.0" encoding="utf-8"?>
<!--리스트 뷰 만들기 -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bookmarkdesign"
    android:layout_margin="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/list_picture"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>
    <!-- id : picture-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#54D7E8"
        android:id="@+id/list_name"
        android:layout_toRightOf="@id/list_picture" />
    <!-- id : title 간단한 설명-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:id="@+id/list_title"
        android:layout_below="@id/list_name"
        android:layout_toRightOf="@id/list_picture"
        android:textSize="17dp"/>
    <!-- id : address-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_below="@id/list_title"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/list_picture"
        android:id="@+id/list_address"
        android:textColor="#9C9C9C"
        android:layout_marginTop="3dp"
        android:textSize="15dp"/>
    <!-- id : call-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:textSize="15dp"
        android:id="@+id/list_call"
        android:textColor="#9C9C9C"
        android:layout_below="@id/list_address"
        android:layout_toRightOf="@id/list_picture"
       />


</RelativeLayout>